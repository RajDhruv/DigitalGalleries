
<div class="row" id="user_iteration">
  <%@paintings.each do|painting|%>
  <div class="col-md-3">
    <div class="card mb-4 box-shadow" style="max-width:100%;max-height:250px;min-height:250px;">
      <img class="card-img-top" src="<%=painting.image.location.url%>">
      <div class="card-body">
      <p class="card-text"><%=painting.name%></p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
          </div>
          <small class="text-muted">9 mins</small>
        </div>
      </div>
    </div>
  </div>
  <%end%>
</div>