<div class="row" id="user_iteration">
  <%@users.each do|user|%>
  <div class="col-md-4">
    <div class="card mb-4 box-shadow" style="max-width:100%">
      <img class="card-img-top" src="<%=profile_display_image(user)%>" style="height: 50vh;object-fit: contain;">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <%=link_to user.name,user_path(user.id),method: :get,class:"btn btn-outline-secondary btn-block",remote: true%>
          </div>
          <small class="text-muted"><%=time_ago_in_words(user.updated_at) %></small>
        </div>
      </div>
    </div>
  </div>
  <%end%>
</div>