<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png' %>
  <title>DigitalGalleries</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<script type="text/javascript">
  function change_painting_privacy(painting_id)
  {
    domain_name=window.location.origin;
    $.ajax({
      type:"post",
      url:domain_name+"/user/"+painting_id+"/change_painting_privacy",
      headers: {
        'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
    }
    })
  }
</script>
<body>

<div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title" id="modal_heading">Modal Heading</h4>
          <button type="button" class="close" data-dismiss="modal" id="close_modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body" id="modal_body">
          Modal body..
        </div>
             
      </div>
    </div>
</div>
  


  <%=render 'shared/navbar'%>

  <main role="main">

    <div id="user_detail">
      <!-- Will be handled by AJAX -->
    </div>

    <div class="album py-5 bg-light">
      <div class="container" id="main_timeline">
        <%=yield%>
      </div>
    </div>

  </main>

  <footer class="text-muted" style="padding-top:1rem;padding-bottom:1rem;">
    <div class="container">
      <p class="float-right">
        <a onclick='$("html, body").animate({ scrollTop: 0 }, "slow");' style="cursor: pointer;">Back to top</a>
      </p>
      <%=Platipus::Renderer.copyright 'Dhruv Raj', 'All rights reserved'%>
    </div>
  </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
  </body>
  </html>
